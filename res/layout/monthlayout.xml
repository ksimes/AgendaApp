<?xml version="1.0" encoding="utf-8"?>
<!-- The top view is a layout manager that places its child views into
     a row, here set to be vertical (so the first is at the top) 
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<com.stronans.android.agenda.views.DateHeaderView
        android:id="@+id/monthDateHeader"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="0.1"
		android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	     />
	
    <com.stronans.android.agenda.views.MonthGridView
        android:id="@+id/monthView"
        android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="0.8"
        />
    
    <ListView
        android:id="@+id/monthDayItems"
        android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="0.1"
        >
    </ListView>
</LinearLayout>
